<h1>New Review</h1>

<%= form_for(@review) do |f| %>
	<%= f.hidden_field :course_id, :name => "course_id", :value => @course.id %>

  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating, placeholder: 3, min: 1, max: 5  %>
  </div>

  <div class="field">
    <%= f.label :review %>
    <%= f.text_area :review, placeholder: 'Enter your review here' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>